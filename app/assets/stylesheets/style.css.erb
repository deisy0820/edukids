}


/*para la pagina de logueo*/

.login{
	background-image: url(<%= asset_path "registro0.jpg"%>);
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center top;
	height: 730px;

}

#login {
	width: 500px;
	margin: auto;
	padding-top: 200px;
	height: 300px;
	text-align: center;
}

.campos {
	width: 100%;
	margin: 15px auto;
	border-style: none;
	height: 50px;
	border-radius: 10px;
	padding-left: 15px;
	font-size: 1.7em;
	color: #90A4AE;
	font-weight: 700;
}

.campos:focus {
	-webkit-box-shadow: 0 0 10px #FFF;
	box-shadow: 0 0 10px #FFF;
}

.campos:hover {
	-webkit-box-shadow: 0 0 10px #FFF;
	box-shadow: 0 0 10px #FFF;
}

.campos:invalid {
	-webkit-box-shadow: 0 0 10px 5px #EF5350;
	box-shadow: 0 0 10px 5px #EF5350;
}

.boton {
	width: 50%;
	padding: 0;
	background-color: #23475F;
	color: #CFD8DC;
	margin-bottom: 20px;
	margin-top: 30px;
}

.boton:hover {
	opacity: 0.9;
	-webkit-box-shadow: 0 0 10px 5px #23475F;
	box-shadow: 0 0 10px 5px #23475F;
	-webkit-transition: all 1s ease;
	-moz-transition: all 1s ease;
	-ms-transition: all 1s ease;
	-o-transition: all 1s ease;
	transition: all 1s ease;
}

.remember {
	color: #727574;
	width: 50%;
	display: inline;
	float: left;
}


