
<div class="fondoRegistro">

  <div id="registro">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      
       
      <%= f.text_field :nombre, autofocus: true, placeholder: 'NOMBRE', class: 'campos' %>
      
      <%= f.text_field :edad, placeholder: 'EDAD', class: 'campos' %>

      <%= f.email_field :email, placeholder: 'CORREO', class: 'campos' %>

      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'CONTRASEÃ‘A', class: 'campos' %>
      
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'COMFIRMAR CONTRASEÃ‘A', class: 'campos' %>

      <div class="actions">
        <%= f.submit "Registrarse", class: 'boton campos' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
