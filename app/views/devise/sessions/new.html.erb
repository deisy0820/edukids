
<div class="login">

  <div id="login">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <%= f.email_field :email, autofocus: true, placeholder: 'CORREO', class: 'campos' %>
      
      <%= f.password_field :password, autocomplete: "off", placeholder: 'CONTRASEÃ‘A', class: 'campos'  %>
      
      <% if devise_mapping.rememberable? -%>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        
      <% end -%>

      
        <%= f.submit "Ingresar", class: 'boton campos'%>
    <% end %>

    <%= render "devise/shared/links"%>
  </div>

</div>
